<%= notice %>

<%= render @patient %>

<br>

<div class="btn-group" role="group" aria-label="Button group with nested dropdown">
  <%= link_to "Edit this patient", edit_patient_path(@patient), class: "btn btn-primary" %>
  <%= link_to "Back to patients", patients_path, class: "btn btn-secondary" %>

  <div class="btn-group" role="group">
    <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
      More Options
    </button>
    <ul class="dropdown-menu">
      <li>
        <%= button_to "Delete this patient", @patient, method: :delete, class: "dropdown-item" %>
      </li>
    </ul>
  </div>
</div>
