<%= notice %>

<div class="card">
   <% if @patient.latitude.nil? || @patient.longitude.nil? %>
      <h4>This patient has no valid location, please update it.</h4>
    <% else %>
    <div class="card-body">
      <%= static_map([{latitude: @patient.latitude, longitude: @patient.longitude}], width: 300, height: 300) %>
    <% end %>
  <div class="card-body">
    <h2 class="card-title">👤 <%= @patient.name %></h2>
    <p class="card-text">📍 <%= @patient.address %></p>
    <a href="https://www.google.com/maps/dir/?api=1&amp;destination=<%= @patient.latitude %>,
      <%= @patient.longitude %>&amp;travelmode=driving" target="_blank" class="btn btn-primary mt-2">Drive me there
      </a>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"></li>
    <li class="list-group-item"><%= link_to "Back to patients", patients_path%></li>
    <li class="list-group-item"><%= link_to "Edit patient", edit_patient_path(@patient) %></li>
    <li class="list-group-item"><%= link_to "Delete this patient", @patient, method: :delete %></li>
  </ul>
</div>
