<h1 class="text-center my-4">All patients</h1>

<%= link_to "New patient", new_patient_path, class:"btn btn-primary mb-3" %>

<div id="patients" class="row">
  <% @patients.each do |patient| %>
    <div class="col-md-4 mb-3">
      <%= render patient, patient: patient %>
    </div>
  <% end %>
</div>

<footer class="fixed-bottom border-top border-dark footer-css">
  <h4 class="d-flex justify-content-center p-3">You have <%= @patients.count %> patients</h4>
</footer>
