<h2>Edit my account</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true, class: "form-control" %>
    <%= f.input :last_name, required: false, autofocus: true %>
    <%= f.input :email, required: true, autofocus: true %>
    <%= f.label "Select your time zone" %> <br>
    <%= f.time_zone_select :time_zone, nil, default: browser_time_zone.name %> <br>
    <%= f.label "Select your language" %> <br>
    <%# <%= form_tag people_path, :class => 'locale' do %>
      <%# <%= select_tag 'set_locale', options_for_select(LANGUAGES, I18n.locale.to_s), :onchange => 'this.form.submit()' %>
    <%# <% end %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "Leave blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "off" } %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "off" } %>
    <%= f.input :current_password,
                hint: "Input your password to confirm the changes.",
                required: true,
                input_html: { autocomplete: "off" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update", class: "btn btn-primary" %>
  </div>
<% end %>

<br>

<%= button_to "Home", root_path, method: :get, class: "btn btn-secondary" %>

<br>

<div>
  <h4>Dangerous area</h4>
  <p>⚠️ This action is not reversible ⚠️</p>

  <%= button_to "Delete my account",
  registration_path(resource_name),
  data: { confirm: "Are you sure?",
  turbo_confirm: "Are you sure?" },
  method: :delete,
  class: "btn btn-danger mb-2" %>

</div>
