<div class="row">
  <h4><%= t(".appointments", count: @appointments.size) %></h4>
    <ul class="list-group list-group-flush">
      <% @appointments.each do |appointment| %>
        <li class="list-group-item">
          👤 <strong><%= appointment.patient ? appointment.patient.name : "Deleted patient" %></strong>
          <br>
          ⏱️ <strong><%= ((appointment.end_time - appointment.start_time) / 60).to_i %></strong> minutes
        </li>
      <% end %>
    </ul>
</div>
