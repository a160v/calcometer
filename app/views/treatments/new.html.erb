<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= simple_form_for(@treatment, local: true, data: { turbo: false }, html: { class: "form-horizontal" }) do |f| %>

        <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

        <%= f.association :patient, label: "Select Patient", collection: Patient.all, label_method: :name, value_method: :id %>

        <%= f.input :start_time, label: "Start Time", as: :time, :minute_step => 15, input_html: { value: Time.current.strftime("%H:%M"), min: Time.current.strftime("%H:%M") } %>

        <%= f.input :end_time, label: "End Time", as: :time, :minute_step => 15, input_html: { value: Time.current.strftime("%H:%M") } %>

        <%= f.button :submit, "Create Treatment", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
