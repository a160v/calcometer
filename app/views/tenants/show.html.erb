<%= notice %>

<div class="card">
  <div class="card-body">
    <h2 class="card-title">ğŸ‘¤ <%= t(".tenant_name", name: @tenant.name) %></h2>
  </div>
  <h1 class="text-center my-4">Members</h1>
  <div id="members" class="row">
    <% @tenant.members.each do |member| %>
      <div class="col-md-4 mb-3">
        <%= render member, member: member %>
      </div>
    <% end %>
  </div>

  <ul class="list-group list-group-flush">
    <li class="list-group-item"><%= link_to t(".back_to_tenants"), tenants_path%></li>
