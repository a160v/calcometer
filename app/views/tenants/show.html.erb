    <li class="list-group-item"><%= link_to t(".edit_tenant"), edit_tenant_path(@tenant) %></li>
    <li class="list-group-item"><%= button_to t(".delete_tenant"), @tenant, method: :delete, class: "btn btn-danger", title: "Delete" %></li>
  </ul>
</div>
